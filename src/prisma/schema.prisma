datasource db {
  provider = "mysql"
  url      = "mysql://root:abc123@127.0.0.1:3306/heptadb"
}

model User {
  id                Int @id @default(autoincrement())
  username          String @unique
  password          String
  name              String
  cpf               String @unique
  telefone          String @unique
  especialidade     String 

  contaBancaria     ContaBancaria? @relation(fields: [contaBancariaID], references: [id])
  contaBancariaID   Int?

  role Role?        @relation(fields: [roleID], references: [id])
  roleID            Int?

  plantao           Plantao[]

  @@map("users")
}

model ContaBancaria {

  id        Int @id @default(autoincrement())
  agencia   String
  banco     String
  conta     String
  cpf       String
  tipo      String

  user      User[]

  @@map("contaBancaria")
}

model Plantao {

  id                Int @id @default(autoincrement())
  data              DateTime?
  diaDaSemana       String

  user User?        @relation(fields: [userID], references: [id])
  userID            Int?

  setor Setores?    @relation(fields: [setorID], references: [id])
  setorID           Int?

  periodo Periodo?  @relation(fields: [peridoID], references: [id])
  peridoID          Int?

  status Status?    @relation(fields: [statusID], references: [id])
  statusID          Int?

  valor Valor?      @relation(fields: [valorID], references: [id])
  valorID           Int?
  
  @@map("plantoes")
}

model Role{

  id     Int @id @default(autoincrement())
  role   String

  user   User[]
  
  @@map("Role")
}

model Hospital{
  id        Int @id @default(autoincrement())
  hospital  String
  cidade    String
  estado    String
  cep       String
  cnpj      String

  setor     Setores[]

}

model Setores{

  id          Int @id @default(autoincrement())
  setores     String

  hospital    Hospital?   @relation(fields: [hospitalID], references: [id])
  hospitalID  Int?
  
  plantao     Plantao[]
  
  @@map("Setores")
}

model MotivoDeTroca{

  id                  Int @id @default(autoincrement())
  plantaoID           Int
  userID              Int
  dataDaSolicitacao   DateTime
  motivo              String

  @@map("MotivosDeTroca")
}

model Periodo{

  id        Int @id @default(autoincrement())
  periodo   String

  plantao   Plantao[]
  
  @@map("Periodo")
}

model Status{

  id        Int @id @default(autoincrement())
  status    String

  plantao   Plantao[]
  
  @@map("Status")
}

model Valor{

  id        Int @id @default(autoincrement())
  valor     String

  plantao   Plantao[]
  
  @@map("Valor")
}

generator client {
  provider = "prisma-client-js"
}
